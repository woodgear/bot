{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "check-bot-client",
            "type": "shell",
            "options": {
                "cwd": "bot-client-rust"
            },
            "command": "cargo check",
            "problemMatcher": {
                "base": "$rustc",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}/bot-client-rust"
                ]
            }
        }
    ]
}